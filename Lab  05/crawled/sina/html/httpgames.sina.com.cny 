<script type="text/javascript">
  $(window).scroll(sco);
  $(window).resize(sco);
    function sco(event) {
		var  left_h = $('#left').height();
        var h = $(this).height();
        var width = $(this).width();
        if(width<900){
            $('#right').css({'position':'static',bottom:'auto',top:'auto'});
            $('#right').css('width', 'auto');
            $('.right').css('height', 'auto');
            return;
        }
        var r = $('.right');
        var right_w = r.width();
        var right_h = $('#right').height();
        r.height(left_h);
        var scrolltop = $(window).scrollTop();
        var botop = $('#Foot').offset().top;
        if(width>=900){
          $('#right').width(right_w);
          if(scrolltop>right_h+200-h){
            if(scrolltop>botop-h){
                $('#right').css({'position':'absolute',bottom:0});
            }else{
                $('#right').css({'position':'fixed',bottom:0,top:'auto'});
            }
          }else{
            $('#right').css('position','static');
          }
        }
      }
  </script>
