        $('.pagination li.t').click(function (e) {
			var top =0;
			$(window).scrollTop(top);
          e.preventDefault();
          var index = $(this).index();
          console.log(index);
          $(this).addClass('active').siblings('li').removeClass('active');
          if(index == 0 ){
            $('.page1').show();
            $('.page2').hide();
          }
          if(index == 1){
            $('.page2').show();
            $('.page1').hide();
          }
        });
