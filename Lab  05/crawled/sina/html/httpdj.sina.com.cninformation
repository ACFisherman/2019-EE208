<script type="text/javascript">
    //资讯定位
    (function(){
        var label = 1;
        $(".information_nav li").removeClass("current");
        switch(label)
        {
            case 1:
                $(".information_nav li[data=1]").addClass("current");
                // get_tag_newsinfo(1);
                break;
            case 3:
                $(".information_nav li[data=2]").addClass("current");
                $(".information_float_sign").css('left','234px');
                 get_tag_newsinfo(2);
                break;
            case 2:
                $(".information_nav li[data=3]").addClass("current");
                $(".information_float_sign").css('left','117px');
                 get_tag_newsinfo(3);
                break;
            case 4:
                $(".information_nav li[data=4]").addClass("current");
                $(".information_float_sign").css('left','351px');
                 get_tag_newsinfo(4);
                break;
            default:
                $(".information_nav li[data=1]").addClass("current");
        }
    })();
    //右侧 浮动 
     (function(){
        var RightTop = $('.top_right').offset().top;
        $(window).scroll(function() {
            var LeftTop = $('.top_left').offset().top;
            var Leftheight = $('.top_left').height();
            var RightHeight = $('.top_right').height();
            var WindowHeight = $(window).height();
            var ScrollTop = $(window).scrollTop();
            if(Leftheight>RightHeight){
                if(ScrollTop>=RightTop+RightHeight-WindowHeight){
                if(ScrollTop<=LeftTop+Leftheight-WindowHeight){
                    $('.top_right').addClass('rfixed');
                    $('.top_right').removeClass('rfixed2');
                }else if(ScrollTop>LeftTop+Leftheight-WindowHeight) {
                    $('.top_right').addClass('rfixed2');
                }
                }else{
                    $('.top_right').removeClass('rfixed rfixed2');
                }
            }

        })
    })();
    //战队榜与名人榜切换 
    (function () {
        var $Tag = $(".dj_wb_nav").find("li");
        var $con = $(".Hot_videos_con");
        var $float_Sign = $(".gz_float_sign");
        changeTag($Tag, $con, "current", "click", function ($tag) {
            $float_Sign.stop().animate({
                "left": $tag.position().left,
                "width": $tag.width() + 2,
            },{duration:300,easing: "easeOutBack"});
            get_rank_data();
        })
    })(); 

     //列表切换
    (function () {
        var $Tag = $(".information_nav").find("li");
        var $con = $(".E_sports_news_list");
        var $float_Sign = $(".information_float_sign");
        changeTag($Tag, null, "current", "click", function ($tag) {
            $float_Sign.stop().animate({
                "left": $tag.position().left,
                "width": $tag.width() + 62,
            },{duration:300,easing: "easeOutBack"});
            var targid = $(".information_nav .current").attr("data");
            get_tag_newsinfo(targid);
        })
    })();
/**
 *  获取各个tag下的新闻
 */
    
    function get_tag_newsinfo(tagid,page)
    {
        if (!tagid)  return false;
        page = page ? page : 1;
        $.ajax({
            type: 'GET',
            cache : false,
            url:"http://dj.sina.com.cn/ajax_list/get_recommend_article_list/"+tagid+'/'+page,
            dataType:'json',
            success:function(msg){
                if(msg.status == "succ"){
                    var html = '';
                    var source='';
                    var mainlist = "main_list_onepic";
                    for(i in msg.game_list.result.data[0]){
                        var data = msg.game_list.result.data[0][i];
                        if(i == msg.game_list.result.data[0].length-1){
                            mainlist = "main_list_onepic last";
                        }
                        /*if(data.summary.length>120)
                            data.summary = data.summary.substr(0,120)+'...';*/
                        html += '<div class="'+mainlist+'"><div class="article_pic"><a href="http://dj.sina.com.cn/article/'+data._id+'.shtml" target="_blank" title="'+data.title+'"><img src="http://image2.sina.com.cn/gm/t_img/kangame/images/nonebg1.jpg" data-src="'+data.recommendpic+'" />';
                        if(data.videoid ){
                            html += '<i class="video_btn"></i>';
                        }
                        html += '</a></div><h3 class="article_title"><a href="http://dj.sina.com.cn/article/'+data._id+'.shtml" target="_blank" title="'+data.title+'">'+data.title+'</a></h3>';
                        html += '<p class="article_introduction">'+data.summary+'</p><div class="new_list_other"><span class="time">'+data.cTime+'</span><span class="from">作者：';
                        html += '<a href="javascript:void(0);">'+data.author+'</a></span><span class="article_share bdsharebuttonbox" data-tag="share_1"><a title="分享到新浪微博" href="javascript:void(0);" class="share_btn weibo" data-cmd="tsina"></a><a title="分享到微信" href="javascript:void(0);" class="share_btn weixin" data-cmd="weixin"></a><a href="javascript:void(0);" data-cmd="more" class="share_btn mshare" data-cmd="more"></a><a href="http://comment5.news.sina.com.cn/comment/skin/default.html?channel=yx&newsid=comos-'+data._id+'" target="_blank" class="share_btn commont"></a></span></div></div>';
                    }

                    if (msg.hasnext){
                        $(".list_more").remove();
                        var next = msg.next_page;
                        var tagid = $(".information_nav .current").attr("data");
                        html +='<div class="list_more"><a href="javascript:void(0)" onclick="get_tag_newsinfo('+tagid+','+next+');$(\'.top_right\').removeClass(\'rfixed\');$(\'.top_right\').removeClass(\'rfixed2\');">查看更多>></a></div>';
                    }else{
                       $(".list_more").remove(); 

                    }
                    if(page>1){
                        $(".E_sports_news_list").append(html);
                    }else{
                        $(".E_sports_news_list").html(html);
                    }
                    $(window).scroll();
                    _bd_share_main.init();
                }
            }
        })





    }
    /* 战队榜  名人榜 */
get_rank_data();
function get_rank_data(){
    var obj = $(".dj_wb_nav li.current");
    var name = obj.data("name") || obj.attr("data-name");
    $.ajax({
        type: 'GET',
        cache : false,
        dataType:'json',
        url:"/ajax_fun/get_zhandui_list/"+name,
        success:function(msg){
            if(msg.status === 'succ'){
                var html = '';
                for(var i in msg.msg.content){
                    var info = msg.msg.content[i];
                    switch(i)
                    {
                        case '0':
                            html +='<li class="one hover"><span class="dj_wb_num">1</span>';
                            break;
                        case '1':
                            html +='<li class="two"><span class="dj_wb_num">2</span>';
                            break;
                        case '2':
                            html +='<li class="thr"><span class="dj_wb_num">3</span>';
                            break;
                        default:
                            var index = parseInt(i)+1;
                            html +='<li><span class="dj_wb_num">'+index+'</span>';
                    }
                    html += '<div class="dj_infor">';
                    var follow = '';
                    follow = info.following ? '已关注' : '+关注';
                    if (info.following){
                        html += '<a class="attention">'+follow+'</a><a href="javascript:void(0)"></a>';
                    }else{
                        html += '<a class="attention " onclick="attention($(this),'+info.zd_uid+')">'+follow+'</a><a href="javascript:void(0)"></a>';
                    }
                    html += '<a href="'+info.wurl+'" target="_blank"><img class="pic" src="'+info.image+'"></a>';
                    html += '<a href="'+info.url+'" target="_blank"><span class="team">'+info.text+'</span></a>';
                    if (name == 'esports_zhandui' ){
                        html += '<a href="'+info.wurl+'" target="_blank"><span class="name"><i class="game_logo"><img src="'+info.image1+'"></i>'+info.game+'</span></a>';
                    }else{
                        html += '<a href="'+info.wurl+'" target="_blank"><span class="name">'+info.game+'</span></a>';
                    }
                    html += '</div></li>';
                }
                $(".dj_wb_conlist").html('').html(html);
            }
        }
    })

};
</script>

