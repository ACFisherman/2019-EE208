    // 展现策略
    rightCheck.editView('174330', function(res) {
        if (!res.errno) {
            if (res.data.edit) {
                $('.para-title .edit-icon').css('display', 'block');
            }
        } else {
            if ('') {
                $('.para-title .edit-icon').css('display', 'block');
            }
        }
    });
}();
