!function(){	require.async(["wiki-common:widget/lib/jquery/jquery","wiki-lemma:widget/lemma_content/mainContent/albumList/albumList","wiki-common:widget/component/nslog/nslog"],function($,AlbumList,nslog){
		var list=new AlbumList({
			newLemmaId:"174330",
			lemmaTitle:"白居易",
			lemmaId:"5353",
			subLemmaId:"5353",
			data:[{"coverpic":"bba1cd11728b4710811c475dc3cec3fdfc03236b","width":400,"height":591,"desc":"\u8bcd\u6761\u56fe\u7247","total":12,"coverurl":"https:\/\/gss0.bdstatic.com\/94o3dSag_xI4khGkpoWK1HF6hhy\/baike\/s%3D235\/sign=843fd3c134a85edffe8cf9207c5509d8\/bba1cd11728b4710811c475dc3cec3fdfc03236b.jpg"}]
		});
		!!window.ScriptLazyLoad && window.ScriptLazyLoad.regist({
			dom:$('.album-list'),
			loadFunc:function(){
				list.load();
				nslog(1258);
			},
			distance:500
		});
	});
}();
!function(){                    require.async(["wiki-common:widget/lib/jquery/jquery","wiki-lemma:widget/basicElement/modulePager/modulePager"],function($,Pager){
                        var slideTo = function (index) {
                            var scroller = $('.tashuo-view');
                            scroller.stop().animate({scrollLeft: (index - 1) * 738}, 500);
                        };
                        var pager = new Pager({
                            total:2,
                            handleNext:function(index){
                                slideTo(index);
                            },
                            handlePrev:function(index){
                                slideTo(index);
                            }
                        });
                        pager.appendTo($(".tashuo-bottom-pager"));
                    });
                }();
