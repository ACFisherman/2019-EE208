<script id="weibo_list_dataTmp" type="text/x-dot-template">
    {{~it.data:value:index}}
    <div class="sectionTxt clearfix">
        <a href="http://weibo.com/u/{{=value.uid}}" target="_blank" class="headPic">
            <img src="{{=value.headImage}}">
        </a>
        <div class="weibo-list">
            <h3 class="weibo-list-name"><a href="http://weibo.com/u/5883691670" title="{{=value.nickname}}" target="_blank" class="weibo-user">{{=value.nickname}}</a></h3>
            <p class="weibo-list-text">{{=value.content}}</p>
            {{?value.containsPhoto}}
            <div class="linePicShow">
                <a href="http://weibo.com/{{=value.uid}}/{{=value.mid62}}" target="_blank">查看原微博图片&gt;&gt;</a>
            </div>
            {{?}}
            {{?value.extend}}
            <div class="weibo-list-retweet"><div class="weibo-list-retweetname"><a href="http://weibo.com/u/{{=value.retweetUid}}" title="{{=value.retweetNickname}}" target="_blank" class="weibo-user">{{=value.retweetNickname}}</a></div><p class="weibo-list-text">{{=value.extend}}</p></div>
            {{?}}
            <div class="weibo-list-meta clearfix">
                <p class="weibo-list-meta-l">{{=value.pubTime}}</p>
                <div class="weibo-list-meta-r">
                    <a href="http://weibo.com/{{=value.uid}}/{{=value.mid62}}?type=repost" target="_blank">转发</a>
                    <a href="http://weibo.com/{{=value.uid}}/{{=value.mid62}}?type=comment" target="_blank">评论</a>
                </div>
            </div>
            <div class="weiboStock clearfix">相关股票： {{=value.stocks}}</div>
        </div>
    </div>
    {{~}}
</script>
