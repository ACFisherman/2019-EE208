                window.feedShareOver = function (t) {
                    var oprt = t.parentNode.parentNode;
                    oprt.className = "tag tagshare clearfix";
                    if (el._hasClass(t, "initrue")) {
                        return;
                    }
                    else {
                        var tid = "#trybox" + t.getAttribute("data-id"),
