                            url: turl,
                            title: txt,
                            img: pic
                        });
                        t.className = "tshare initrue";
                    }
                }
                window.feedShareOut = function (t) {
                    var oprt = t.parentNode.parentNode;
                    oprt.className = "tag clearfix";
                }
            });
