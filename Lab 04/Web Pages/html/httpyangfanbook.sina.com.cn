<script type="text/javascript">
  //在页面初始化时为图片绑定点击事件
  $(function () {
    var video_path = document.referrer;
    //判断是否是从本网站进来的
    var is_path = video_path.indexOf("yangfanbook.sina.com.cn");

    // 获取终端的相关信息
    var Terminal = {

      // 辨别移动终端类型
      platform: function () {

        var u = navigator.userAgent;
        var os = navigator.platform;

        return {

          // android终端或者uc浏览器
          Windows: (u.indexOf('Windows ') > -1 && u.indexOf("Chrome") > -1) || (u.indexOf('Windows ') > -1 && u.indexOf(".NET") > -1 && u.indexOf("MSIE 10.0") <= -1) || (u.indexOf('Windows ') > -1 && u.indexOf("Firefox") > -1) || (u.indexOf('Windows ') > -1 && u.indexOf("Safari") > -1),

          // 是否为iPhone或者QQHD浏览器
          Mac: (os.indexOf('Mac') > -1 && u.indexOf("Chrome") > -1) || (os.indexOf('Mac') > -1 && u.indexOf("Safari") > -1) || (os.indexOf('Mac') > -1 && u.indexOf("Firefox") > -1)

        };

      }()

    }

    if ((Terminal.platform.Windows && is_path <= -1) || (Terminal.platform.Mac && is_path <= -1)) {

      var bVideoShowed = ($.cookie("videoShowed")=="1");
      if (!bVideoShowed){
        $("#video_div").css("display", "block");
        $.cookie("videoShowed", "1", { expires: 999999});
      } else {
          $("#container").css("display", "block");
          //网站显示     
          document.getElementById("container").setAttribute("data-flag", "1");
      }
      //网站
      //工作区     

      //********************原版************************
      //var Xheight = screen.height;
      //var Xwidth = document.body.offsetWidth;
      //********************原版************************

      //********************new************************

      //获取窗口宽度 
      var Xheight = 0;
      var Xwidth = 0;

      if (window.innerWidth)
        Xwidth = window.innerWidth;
      else if ((document.body) && (document.body.clientWidth))
        Xwidth = document.body.clientWidth;
      //获取窗口高度 
      if (window.innerHeight)
        Xheight = window.innerHeight;
      else if ((document.body) && (document.body.clientHeight))
        Xheight = document.body.clientHeight;
      //通过深入Document内部对body进行检测，获取窗口大小 
      if (document.documentElement && document.documentElement.clientHeight && document.documentElement.clientWidth) {
        Xheight = document.documentElement.clientHeight;
        Xwidth = document.documentElement.clientWidth;
      }

      //********************new************************


      document.getElementById("video_show").setAttribute("width", Xwidth);
      document.getElementById("video_show").setAttribute("height", Xheight);

      document.getElementById("video_div").style.width = Xwidth + 17 + "px";
      document.getElementById("video_div").style.height = Xheight + "px";
      //给按钮赋值       
      $("#video_button").css({ left: Xwidth / 2 - 218 });
      $("#video_button").css({ top: Xheight / 2 - 75 });

      $("#video_open").click(function () {
        //此处写点击触发的操作
        document.getElementById("video_button").style.display = "none";
        document.getElementById("video_buttonsmall").style.display = "block";


        document.getElementById("video_close").style.right = 200;


        //1、取得播放器的对象
        var objVideo = document.getElementById("video_show");;
        //2、调用视频播放API
        objVideo.play();

        objVideo.setAttribute("controls", "controls");
        //视频停止API
        //objVideo.pause();
      });

      //关闭
      $("#video_close").click(function () {
        //此处写点击触发的操作
        document.getElementById("video_button").style.display = "none";
        $("#video_div").slideUp("slow");

        //document.getElementById("video_div").style.display = "none";
        ////此处写点击触发的操作
        //document.getElementById("video_close").style.display = "none";        
        //1、取得播放器的对象
        var objVideo = document.getElementById("video_show");;
        //2、调用视频播放API         

        //视频停止API
        objVideo.pause();

        //网站显示
        $("#container").css("display", "block");
      });

      //小关闭
      $("#video_closesmall").click(function () {
        //此处写点击触发的操作

        $("#video_div").slideUp("slow");
        //document.getElementById("video_div").style.display = "none";
        ////此处写点击触发的操作

        //1、取得播放器的对象
        var objVideo = document.getElementById("video_show");
        //2、调用视频播放API         

        //视频停止API
        objVideo.pause();

        //网站显示
        $("#container").slideDown("slow");
        //$("#container").css("display", "block");
      });

      var model = document.getElementById("video_show");
      model.addEventListener("ended", function () {
        $("#video_div").slideUp("slow");
        $("#container").css("display", "block");

      });

      //当在音频/视频加载期间发生错误时
      model.addEventListener("error", function () {
        $("#video_div").slideUp("slow");
        $("#container").css("display", "block");

      });

      //当浏览器尝试获取媒体数据，但数据不可用时
      //model.addEventListener("stalled", function () {

      //  $("#container").css("display", "block");
      //  $("#video_show").slideUp("slow");

      //});
      //当音频/视频的加载已放弃时
      model.addEventListener("abort", function () {
        $("#video_div").slideUp("slow");
        $("#container").css("display", "block");

      });
    }
    else {
      //网站显示     
      document.getElementById("container").setAttribute("data-flag", "1");


    }

  });
  </script>

