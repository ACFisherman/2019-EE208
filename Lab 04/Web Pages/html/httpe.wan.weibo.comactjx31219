<script>

    if(parseInt(is_login)!=0){
        checkmp();
    }
    function checkmp() {
        $.ajax({
            type: 'get',
            url: "/game/"+symbol+"/jx31219card",
            dataType: 'json',
            data:{
                'status':1,
            },
            success: function(data){
                if(data.code==200){
                    //没有加入过可以抽
                    flag=0;
                }else{
                    //加入过不可以抽
                    //data.data
                    flag=1;
                    var shownum=parseInt(data.data)-1;
                    $('.school li .btn-join').removeClass('btn-join-blue'); //此处是移除蓝色状态;(因为此类名有hover状态亮蓝色)
                    $('.school li').each(function(index,element){

                        if(index!=shownum){
                            $(element).find('.btn-join').addClass('btn-join-grey'); //添加灰色状态; 不可点状态为灰色
                        }else{
                           // $('.dialog-prize').show();
                            $(element).find('.btn-join').addClass('btn-join-yellow'); //添加黄色状态; 点击后状态为黄色
                            $('.school li').eq(index).find('.btn-join').parent().addClass('cur');
                          //  $('.dialog-container').css('display','block');
                        }
                    });
                }
            }
        });
    }
  //视频
  $(".btn-video").click(function(){
    $(this).next('.video-bg').show();
    $(this).next('.video-bg').find('video')[0].play();
  });
  $(".video-bg .close").click(function(){
    $(this).parent().hide();
    $(this).parent().find('video')[0].pause();
  });

  //大红包动画出场
  var windowHeight = $(window).height();
  var pageHeight0 = $('.scrollDiv').eq(0).offset().top+$('.scrollDiv').eq(0).height()/2;
  $(window).scroll(function(){
    var scrollHeight = $(document).scrollTop();
    if(scrollHeight>=pageHeight0-windowHeight){
      $('.nav1,.nav2').show();
      $('.nav1').addClass('fadeInLeft');
      $('.nav2').addClass('fadeInLeft');
    }else{
      $('.nav1,.nav2').hide();
      $('.nav1').removeClass('fadeInLeft');
      $('.nav2').removeClass('fadeInLeft');
    }
  });

  //点击加入门派
  var flag = 0;
  $('.school li .btn-join').click(function(){
      if(parseInt(is_login)==0){
          //waplogincheck();
          SOL.loginShow();
          return;
      };
    if(flag == 0){
      $(this).parent().addClass('cur');
        $.ajax({
            type: 'POST',
            url: "/act_ajax/"+symbol+"/sendSmallHb",
            dataType: 'json',
            success: function(data){
                console.log(data);
                if(data.code==200){
                    var moneynum=data.data.amount;
                    var money_num=moneynum/100;
                    //获得5元现金红包
                    $("#money").html("获得"+money_num+"元现金红包");
                    ///
                    flag =1;
                    var num=0;
                    $('.school li .btn-join').removeClass('btn-join-blue'); //此处是移除蓝色状态;(因为此类名有hover状态亮蓝色)
                    $('.school li').each(function(index,element){
                        if($(element).hasClass('cur')){
                            inum=index;
                            $('.dialog-prize').show();
                            $(element).find('.btn-join').addClass('btn-join-yellow'); //添加黄色状态; 点击后状态为黄色
                            $('.dialog-container').css('display','block');
                        }else{
                            $(element).find('.btn-join').addClass('btn-join-grey'); //添加灰色状态; 不可点状态为灰色;
                        }
                    });
                    inum=parseInt(inum+1);
                    $.ajax({
                        type: 'get',
                        url: "/game/"+symbol+"/jx31219card",
                        dataType: 'json',
                        data:{
                            'status':2,
                            'num':inum,
                        },
                        success: function(data){
                            if(data.code==200){
                                flag=0;
                            }else{
                                flag=1;
                            }
                        }
                    });
                    share();
                }else{
                    if(data.code==207&&data.msg==2006){
                        $("#moneyts").html("很遗憾");
                        $("#money").html("您已经领过该红包");
                    }else{
                        $("#moneyts").html("很遗憾");
                        $("#money").html("您没有领到红包");
                    }
                }
            }
        });
    }else if(flag == 1){
      if($(this).parent().hasClass('cur')){
        alert('您已经选择过门派');
      }
    }
  });
  $('.btn-send-weibo').click(function(){
    $('.dialog-container').css('display','none');
  });


  //弹窗
  //点击领取大礼包
  $(".btn-redbag").click(function() {
      if(parseInt(is_login)==0){
          //waplogincheck();
          SOL.loginShow();
          return;
      };
      $.ajax({
          type: 'get',
          url: "/act_ajax/"+symbol+"/sendCardNo",
          dataType: 'json',
          data:{
              'item_id':27173,
              'gid':3733,
              'tuid':tuid
          },
          success: function(data){
              if(data.code==200||data.code==400||data.code==403){
                  $('.active-code').html(data.data.kahao);
              }else{
                  if (data.code==209||data.code==208){
                      $('.active-code').html("您已经领过，请去存卡箱查看！");
                  }else{
                      $('.active-code').html("领卡失败");
                  }

                  //false
              }
          }
      });
    $(".dialog-rules").show();
  });
  //关闭弹窗
  $(".dialog .close").click(function() {
    $(this).closest('.dialog').hide();
  });

  function share(){
      if(parseInt(is_login)==0){
          waplogincheck();
          return;
      };
      weibcontent ="#剑网3世外蓬莱#我@ 大侠要去蓬莱探索东海大世界，来不及解释啦，快来领红包上船吧！";
      $.ajax({
          type: 'POST',
          url: "/act/"+symbol+"/add_times/wb",
          dataType: 'json',
          data:{'content':weibcontent},
          success: function(data){
              console.log(data);
          }
      });
  }
</script>
