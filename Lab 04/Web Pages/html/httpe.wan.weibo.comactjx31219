  <script>
    //预加载
    function preloadImages(images,callback,drawPercent){
      var imageArray = [],
        loadedImagesNum = 0;
      for (var i = 0; i < images.length; i++){
        imageArray[i] = new Image();
        imageArray[i].onload = function(){
          imageLoadPost();
        };
        imageArray[i].onerror = function(){
          imageLoadPost();
        };
        imageArray[i].src = images[i];
      }
      function imageLoadPost(){
        loadedImagesNum++;
        if(drawPercent){
          drawPercent(loadedImagesNum,imageArray.length);
        }
        if(loadedImagesNum === images.length){
          if(callback){callback()}
        }
      }
    }
    var stage1=[
      'https://n.sinaimg.cn/games/jws20181220/header.jpg',
