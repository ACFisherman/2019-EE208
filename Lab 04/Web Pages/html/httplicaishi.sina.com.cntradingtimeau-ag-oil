<script>

    var __URL_ARGS_CONFIG = {
        'sfr': 'online_jjy'
    };

    seajs.use('tree.widget.weTalk3', function () {
//            trade_cn  => 交易时间 A股
//            trade_jyy => 交易时间 金银油
//            trade_us => 交易时间 美股

        T.Widget.WeTalkV3({
            cmnType: '51', //统一为51了
            pageType: 'trade_jyy',
            relationId: '8889',
            curUser: {
                isAdmin: 0,
                uid : '',
                name: '',
                pic : '' || 1,
                hasPhone: !!''
            },
            target: '#blblTarget'
    });

        var tCaoDian  = $('#tCaoDian'),
            cmt       = 0,
            dse       = tCaoDian.find('.dse'),
            dseHeight = dse.height(),
            lHeight   = tCaoDian.find('.ds').height(),
            cdTimer;

        cmt = -(dseHeight - lHeight);

        dse.css({
            'margin-top': cmt
        });

        tCaoDian.css({
            'visibility': 'visible'
        });

        tCaoDian.on('mouseenter', function () {
            if (cdTimer) {
                clearInterval(cdTimer);
                cdTimer = null;
            }
        }).on('mouseleave', function () {
            startCDTimer();
        });

        function startCDTimer () {
            if (cdTimer) return;

            cdTimer = setInterval(function () {
                if (cmt >= 0) {
                    cmt = -(dseHeight - lHeight);
                } else {
                    cmt += lHeight;
                }

                dse.animate({
                    'margin-top': cmt
                })
            }, 3e3);
        }

        startCDTimer();
    })
    seajs.use('tree.liveInfo');
    seajs.use('tree.pvShare');

    seajs.use('tree.widget.tip', function () {
        T.Widget.Tip3();
    });
</script>
