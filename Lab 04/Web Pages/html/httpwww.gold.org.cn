	function getdocbypv(type){
		$.ajax({
			url:"/TrsAppServer/news/read.action",
			data:{
				docid:0,
				docnum:10,
				type:type,
				chnlid:"",
				siteid:"19",
				titlenum:15
			},
			type: "post",
			async:false,
			dataType: "json",
			success:function(message){
	            var list = message['doclist'];
				var dom = '';var doctitle="";var docpuburl="";
				for(var i in list){
					var obj = list[i];
                    if(obj.doctitle.length>16){
						doctitle = obj.doctitle.substring(0,16)+"...";
					}else{
						doctitle= obj.doctitle;
					}
					if(obj.docpuburl.indexOf("_share")!= -1){
						docpuburl = obj.docpuburl.substring(0,obj.docpuburl.indexOf("_share"))+".html";
					}else{
						docpuburl = obj.docpuburl;
					}
					dom +='<li id=contact_'+obj.docid+'><a href='+docpuburl+' target="_blank">'+doctitle +'</a></li>';
				}
				$("."+type+"_ul").html(dom);
			}
		});
	}
