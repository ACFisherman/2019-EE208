				var obj = list[i];
				dom+='<li id=contact_'+obj.docid
					+'><a href='+obj.docpuburl+' TARGET=_blank>'+obj.doctitle+'</a></li>';
			}
if(type == 'daypvorder'){
$('#list_con1').append(dom);
}else if(type == 'weekpvorder'){
$('#list_con2').append(dom);
}else {
$('#list_con3').append(dom);
}
		}
	});
}
