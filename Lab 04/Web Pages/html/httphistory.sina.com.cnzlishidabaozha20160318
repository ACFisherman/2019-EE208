<script type="text/javascript">
$(function(){
        $('<meta http-equiv="mobile-agent" content="format=html5; url=http://dp.sina.cn/dpool/cms/jump.php?url=' + window.encodeURIComponent(location.href) + '">').appendTo($('head'));
  $('#huiguTrigger').on('click', function(e){
    e.stopPropagation();
    $('#huiguList').toggle();
  });
  $('#huiguList').on('click', function(e){
    e.stopPropagation();
  });
  $('#huiguList .o_close_btn').on('click', function(e){
    $('#huiguList').hide();
  });
  $(document).on('click', function(){
    $('#huiguList').hide();
  });

  $('#rightMenuList').on('click', 'a', function(e){
    e.preventDefault();
    $('#rightMenuList a').removeClass('selected');
    $(this).addClass('selected');
    var index = $(this).parent().index();
    var dom = $('.blk13-i')[index];
    if(dom){
      var pos = $(dom).position();
      $('html,body').animate({scrollTop:pos.top - 20}, 300);
    }
  });

  function viewData(){
    var e = 0, l = 0, i = 0, g = 0, f = 0, m = 0;
    var j = window, h = document, k = h.documentElement;

    e = k.clientWidth || h.body.clientWidth || 0;
    l = j.innerHeight || k.clientHeight || h.body.clientHeight || 0;
    g = h.body.scrollTop || k.scrollTop || j.pageYOffset || 0;
    i = h.body.scrollLeft || k.scrollLeft || j.pageXOffset || 0;
    f = Math.max(h.body.scrollWidth, k.scrollWidth || 0);
    m = Math.max(h.body.scrollHeight, k.scrollHeight || 0, l);
    return {scrollTop: g,scrollLeft: i,documentWidth: f,documentHeight: m,viewWidth: e,viewHeight: l};
  }
  var theTop = $('#rightMenuList').position().top;
  var scrollTimeout;
  var scrollCallback = function(){
    var vD = viewData();
    if(vD.scrollTop > theTop){
      $('#rightMenuList').css('margin-top', vD.scrollTop - theTop + 60 + 'px');
    } else {
      $('#rightMenuList').css('margin-top', '10px');
    }
  };
  $(window).on('scroll', function(){
    if(scrollTimeout) window.clearTimeout(scrollTimeout);
    scrollTimeout = window.setTimeout(scrollCallback, 100);
  });

  // new change start 2014-9-29
  $(".ftl").on("mouseenter", function(){
    $(".ftl_box").slideDown();
  });

  $(".ftl").on("mouseleave", function(){
    $(".ftl_box").slideUp();
  });

  $(".ftl").on("mouseover", "li",function(){
    $(this).addClass("select").siblings("li").removeClass("select");
  });

  // $(".menu").on("mouseenter", function(){
  //   $(".menu_box").slideDown();
  // });

  // $(".menu").on("mouseleave", function(){
  //   $(".menu_box").slideUp();
  // });

  // $(".menu").on("mouseover", "li",function(){
  //   $(this).addClass("select").siblings("li").removeClass("select");
  // });

  // new change end 2014-9-29
});
</script>

</div>
<!-- p_r1 end -->

