(function(){
	$('.nav-xiancheng li').hover(function(){
		var _ul = $(this).find('ul')
		if(_ul.length>0&&_ul.css('display')=='none'){
			$('.xc-hill').addClass('cur');
			_ul.fadeIn(200);
			}
		},function(){
			var _ul = $(this).find('ul')
			if(_ul.length>0&&_ul.css('display')!='none'){
				$('.xc-hill').removeClass('cur');
				_ul.fadeOut(200);
				}
		});
		//pagefollow
			})();

	$('.xiancheng-city-box').hover(function(){
		var _ul = $('#sitediv');
		if(_ul.length>0&&_ul.css('display')=='none'){
			$('.xiancheng-city').addClass('cur');
			_ul.fadeIn(200);
			}
		},function(){
			var _ul = $('#sitediv');
			if(_ul.length>0&&_ul.css('display')!='none'){
				$('.xiancheng-city').removeClass('cur');
				_ul.fadeOut(200);
				}
			});
_S_pSt();
</script> 
