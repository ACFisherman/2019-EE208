    function FormatDate (strTime,$type) {
        var da = strTime.replace("年","-").replace("月","-")
                .replace("日","").replace(/-/g,"/").split(/\/|\:|\ /);
        date = new Date(da[0], da[1] - 1, da[2], da[3], da[4], da[5]);
        var mon  = '';
        var day  = '';
        if ($type == 1){
            mon = date.getMonth()+1 <10 ? '0'+(date.getMonth()+1) : date.getMonth()+1;
            return date.getFullYear()+"-"+mon+"-"+date.getDate();
        }else{
            mon = date.getMonth()+1 <10 ? '0'+(date.getMonth()+1) : date.getMonth()+1;
            day ="-"+date.getDate()
            return mon+day;
        }
    }
