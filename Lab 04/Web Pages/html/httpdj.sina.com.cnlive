                        $('#vds li').removeClass('current');
                        if(current_vod != 0) {
                            $('#vod_' + current_vod).addClass('current');
                        }
                    }


                    $('#vds li').hover(function() {
                        $(this).addClass('current');
                        var index = $(this).index();
                        $($(".pic-title")[index]).show();
                    },function() {
