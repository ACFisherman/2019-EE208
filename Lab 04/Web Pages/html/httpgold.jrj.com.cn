/**

*@AddDayCount:获取AddDayCount天后的日期

*@style:返回时间格式 "-" 返回年-月-日 传别的参数，返回**年**月**日

*@nowtime:传入的时间

**/

function showtime(AddDayCount,style,nowtime){

	var dd;

	if(typeof(nowtime)=="undefined"){

		dd = new Date();

	}else{

		nowtime=nowtime.replace(/-/gm,"/");

		dd = new Date(nowtime);

	} 

    dd.setDate(dd.getDate()+AddDayCount);

    var y = dd.getFullYear();

    var m = dd.getMonth()+1+"";//获取当前月份的日期

    var d = dd.getDate()+"";

	if("-"==style){

		if(m.length==1){

			m=0+m;

		}

		if(d.length==1){

			d=0+d;

		}

		return y+"-"+m+"-"+d;

	}

    return y+"年"+m+"月"+d+"日";

}
