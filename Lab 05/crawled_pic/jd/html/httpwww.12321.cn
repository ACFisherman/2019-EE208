		function MilliFormat(fSum){  
			var strSum;   
			strSum = new String(fSum);  
			if(strSum.indexOf(".") > -1) {                  
				behind = strSum.split(".")[1];  
				strSum = strSum.split(".")[0];  
			}  
			var len;  
			var result = "";    
			var temp = "";       
			len = strSum.length;       
			while(len > 3){                  
				temp = ","+strSum.substring(len - 3,len);  
				strSum = strSum.substring(0,len - 3);                  
				result = temp + result;  
				len = strSum.length;  
			}  
			if(len > 0)  
			{  
				result = strSum + result;  
			}  
			return result;  
		}
	</script>
