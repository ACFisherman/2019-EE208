<script>
    var wow = new WOW();
    wow.init();
</script>
<script>

    $('input[type=submit]').click(function () {

        var index = layer.load(1, {

            shade: [0.1, '#fff'] //0.1透明度的白色背景

        });
        var user_name = $('input[name=user_name]').val() == undefined ? '' : $('input[name=user_name]').val();
        var company = $('input[name=company]').val() == undefined ? '' : $('input[name=company]').val();
        var tel = $('input[name=tel]').val() == undefined ? '' : $('input[name=tel]').val();
        var remark = $('input[name=remark]').val() == undefined ? '' : $('input[name=remark]').val();
        $.ajax({
            type: "post",
            url: "https://www.eastdaymedia.com.cn/api/userdata",
            data: {
                user_name: user_name,
                company: company,
                tel: tel,
                remark: remark
            },
            success: function (data) {
                layer.closeAll();
                if (data.status == 1) {
                    layer.msg(data.msg, {icon: 1, time: 1000}, function () {
                        location.reload();
                    })
                } else {
                    layer.msg(data.msg, {icon: 5, time: 1000});
                }
            },
        });
    });

</script>

