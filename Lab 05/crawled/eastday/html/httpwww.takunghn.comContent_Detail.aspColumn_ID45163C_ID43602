<script>
    getDetail();
    function getDetail(){
        $.ajax({
            url:'/Json/GetSearchContent.asp?action=GetShow',
            type:'GET',
            data:{
                C_ID:$.getUrlParam('C_ID'),
                MyUserCode: "takunghn",
                
            },
            success:function(data){
                if(data.code===200){
                    $('#name p').text(data.C_Title);
                    $('.cont-dow p span:first').text(data.C_AddDate);
                    //$('#name p').text(data.C_AddDate);
                    $('.xx .description').html("<img src='"+data.P_XXLImage+"'/>");
                }else {
                }
            }
        });
    }


	$(function() {
		$('#btnSumit').click(function() {
			addZuoping();
		});
	});
	function addZuoping() {
		var tit = $('#pinglunnr').val();
		if(tit == '') {
			alert('请填写内容');
		} else {
			$.ajax({
				type: "post",
				url: '/json/GetUserTopic.asp',
				data: {
					action: 'GetPost',
					ObjType: 'isWenti',
					Title: tit,
					Field20: user.U_ID,
					Description0:tit,
                                        ObjID:$.getUrlParam('C_ID'),
                                        IsPass:0
				},
				success: function(data) {
					if(data.code === 200) {
						alert('添加成功!');
						location.reload();
					} else {
						alert(data.msg);
					}
				}
			});
		}
	}



	/*列表*/
        showTopicList();
	function showTopicList(num) {
		num = num ? num : 1;
		$.ajax({
			url: '/json/GetSearchTopic.asp',
			async: false,
			data: {
                                ObjID:$.getUrlParam('C_ID'),
                        	ObjType: 'isWenti',
				page: num,
				rows: '10',
				DisplyObj: 'field,picture,image,detail',
                                IsPass:1
			},
			success: function(data) {
				if(data.code === 200) {
                                           $('.p-right b').text(data.total);
					for(var i=0,len=data.rows.length;i<len;i++){
						plshu=getplNumber(data.rows[i]['T_ID']);
						if(plshu){
							data.rows[i]['plshu']=plshu;
						}else{
							data.rows[i]['plshu']='0';
						}
					}
					var html = template('ReplyList', data);
					$('.pinglun ul').html(html);
					showPages('pages', data.total, 10, num, 'showTopicList');
				}else {
					$(".pinglun ul").html('<table border="0" width="100%" cellspacing="5" style="line-height:100%;color:#333;"><tbody><tr><td align="center" height="300.html">暂无相关内容！</td></tr></tbody></table>');
				}
			}
		});
	}
	/*评论数*/
	function getplNumber(tid) {
		var val=false;
		$.ajax({
			url: '/json/GetSearchTopic.asp?action=GetReply',
			async: false,
			data: {
				T_ID:tid
			},
			success: function(data) {
				if(data.code === 200) {
					val = data.total;
				}
			}
		});
		return val;
	}


	function showPages(domId, total, rows, currentPage, fun) {
		var dom = document.getElementById(domId);
		var pages = Math.ceil(total / rows),
			first = 1,
			prev = currentPage <= 1 ? 1 : (currentPage - 1),
			next = currentPage == pages ? currentPage : (currentPage + 1),
			last = pages;
		var html = '',
			pageLen = pages > 7 ? 7 : pages;
		html += '<a class="first" href="javascript:' + fun + '(' + first + ')" >首页</a>';
		html += '<a class="prev" href="javascript:' + fun + '(' + prev + ')">&lt;上一页</a>';
		var sum = pages > 3 ? 3 : pages,
			start = 1;
		if (currentPage <= 1) {
			start = currentPage;
		} else if (currentPage >= pages && (currentPage - 2) >= 1) {
			start = currentPage - 2;
		} else {
			start = currentPage - 1;
		}
		for (var i = 0, start; i < sum; i++, start++) {
			if (start == currentPage) {
				html += '<span class="current">' + start + '</span>';
			} else {
				html += '<a href="javascript:' + fun + '(' + start + ')">' + start + '</a>';
			}
		}
		html += '<a class="next" href="javascript:' + fun + '(' + next + ')" >下一页&gt;</a>';
		html += '<a class="last" href="javascript:' + fun + '(' + last + ')">尾页</a>';
		dom.innerHTML = html;
	}
</script>
