//日期 时间
var myDate = new Date();
//处理月份
var month = myDate.getMonth()+1;
if(month>0&&month<10){
   month = '0'+month;
}
var day = myDate.getDate();
if(day>0&&day<10){
   day = '0'+day;
}
var datastr = myDate.getFullYear()+'-'+month+'-'+day;
var weekday=["星期日","星期一","星期二","星期三","星期四","星期五","星期六"];
datastr += weekday[myDate.getDay()];
$('#date').html(datastr);
</script> 

