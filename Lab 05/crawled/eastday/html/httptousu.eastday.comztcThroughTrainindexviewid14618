<script language="javascript">
    String.prototype.IsNumber = function () {
        var regexp = /[0-9]$/;
        return regexp.test(this);
    }
    function IsBlank(inputStr) {
        for (var i = 0; i < inputStr.length; i++) {
            var onechar = inputStr.charAt(i);
            if (onechar != " ") {
                return false;
            }
        }
        return true;
    }
    function GotoPage(totalPage) {
        var id = $("#tID").val();
        var page = document.getElementById("page").value;
        if (page.IsNumber() == false) {
            alert("页数必须是正整数")
            return;
        }
        if (page > totalPage) {
            alert("不能超过最大页数");
            return;
        }
        window.location.href = "view?id=" + id + "&page=" + page;
    }
    function DegreeSatisfaction() {
        var degree;
        if (document.getElementById("sc1").checked == true) {
            degree = "1";
        } else if (document.getElementById("sc2").checked == true) {
            degree = "2";
        } else if (document.getElementById("sc3").checked == true) {
            degree = "3";
        } else {
            alert("请选择满意度");
            return;
        }
        var code = $("#checkCode").val();
        if (IsBlank(code) == true) {
            alert("请输入验证码");
            return;
        }
        var id = $("#tID").val();
        if (id == 0) {
            alert("提交失败");
            return;
        }
        var url = "DegreeSatisfaction?degree=" + degree + "&id=" + id + "&code=" + code;
        $.ajax({
            type: 'get',
            url: url,
            async: false,
            cache: false,
            success: function (data) {
                $("#imgCheckCode").attr("src", getCheckCode());
                if (data == -1) {
                    alert("验证码错误，请重试");
                } else {
                    var tmp = parseInt($("#span" + degree).html()) + 1;
                    $("#span" + degree).html(tmp);
                    alert("感谢您的参与");
                }
            },
            error: function (xmlHttpRequest, textStatus, errorThrown) {

            }
        });
    }

    var fileID = -1;
    var fileLength = 0;
    function addFileInput() {
        if (fileLength >= 10) {
            alert("上传文件数不能大于10个");
            return;
        }
        fileID = fileID + 1;
        fileLength = fileLength + 1;
        $("#divFiles").append(
            "<p id=\"pFile" + fileID + "\" class=\"f3\"><label>图片上传：</label><input type=\"file\" name=\"files\"  id=\"files" + fileID + "\"/><input type=\"button\" class=\"delete\" value=\"删除本图\" onclick=\"delFileInput(" + fileID + ");\" /></p>" +
            "<p id=\"pFileInfo" + fileID + "\" class=\"f4\"><label>图片说明：</label><input type=\"text\" name=\"filesinfo\" id=\"filesinfo" + fileID + "\" maxlength=\"1000\" /></p>"
            );
    }

    function delFileInput(n) {
        $("#pFile" + n).remove();
        $("#pFileInfo" + n).remove();
        fileLength = fileLength - 1;
    }
    function checkForm() {
        var txtRealName = document.getElementById("name");
        var txtContent = document.getElementById("message");
        if (IsBlank(txtRealName.value) == true) {
            alert("请填入姓名");
            txtRealName.focus();
            return false;
        }
        if (IsBlank(txtContent.value) == true) {
            alert("请填入内容");
            txtContent.focus();
            return false;
        }

    }
    function sumbitForm() {
        if (checkForm() == false) {
            return false;
        }
        document.getElementById("btnSubmit").style.display = "none";
        document.getElementById("lblSubmit").style.display = "inline";
        var infos = document.getElementsByName("filesinfo");
        var fs = document.getElementsByName("files");
        var re = new RegExp(",", "g");
        for (n = 0; n < infos.length; n++) {
            if (fs[n].value != "") {
                if (IsBlank(infos[n].value) == true) {
                    alert("请填写图片说明");
                    infos[n].focus();
                    document.getElementById("btnSubmit").style.display = "inline";
                    document.getElementById("lblSubmit").style.display = "none";
                    return false;
                } else {
                    infos[n].value = infos[n].value.replace(re, "，");
                }
            }
        }
        document.getElementById("form1").submit();
        return true;
    }

    window.onload = function () {
        $("#imgCheckCode").attr("src", getCheckCode());
    }

</script>