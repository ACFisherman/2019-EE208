    }    
	.leftFloat
	{
		position: absolute;
		width: 89px; height: 282px; margin: 0 14px; top: 190px; left: 0;
	}
    .weixin {
		position: absolute;
		width: 89px; height: 172px; margin: 0 14px; border: 1px solid #efefef; top: 190px; right: 0;
	}
		.weixin .btn-close,.leftFloat .btn-close {
			position: absolute;
			width: 20px; height: 20px; top: 0px; right: 0px;
		}
    .btn-close
    {
        background-image: url("images/close.png");
        background-repeat: NO-REPEAT;
    }
</style>
<script type="text/javascript">
    $(function () {
        $(".FLink").change(function () {
            window.open($(".FLink").val());
        })
    })

    $(function () {
        var $root = $('html');
        var $weixin = $('.weixin');
        var $leftFloat = $('.leftFloat');
        var offsetY = $weixin.offset().top;
        var leftOffsetY = $leftFloat.offset().top;

        $(window).scroll(function (event) {
            setTimeout(function () {
                $weixin.animate({ top: $root.scrollTop() + offsetY }, 50);
                $leftFloat.animate({ top: $root.scrollTop() + leftOffsetY }, 50);
            }, 30);
        });
        $weixin.find('.btn-close').click(function (event) {
            event.preventDefault();
            $weixin.remove();
        });
        $leftFloat.find('.btn-close').click(function (event) {
            event.preventDefault();
            $leftFloat.remove();
        });
    });
</script>

