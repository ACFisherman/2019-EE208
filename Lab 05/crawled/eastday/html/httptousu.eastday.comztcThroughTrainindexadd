<script language="javascript">
    var fileID = -1;
    var fileLength = 0;
    function addFileInput() {
        if (fileLength >= 9) {
            alert("上传文件数不能大于10个");
            return;
        }
        fileID = fileID + 1;
        fileLength = fileLength + 1;
        $("#divFiles").append(
            "<p id=\"pFile" + fileID + "\"><label>图片上传：</label><input type=\"file\" name=\"files\" id=\"files" + fileID + "\"/><input type=\"button\" value=\"删除本图\" onclick=\"delFileInput(" + fileID + ");\" /></p>" +
            "<p id=\"pFileInfo" + fileID + "\"><label>图片说明：</label><input type=\"text\" maxlength=\"1000\" name=\"filesinfo\" id=\"filesinfo" + fileID + "\" style=\"width:416px;\"/></p>"
            );
    }

    function delFileInput(n) {
        //arrFiles[n] = 0;
        //n = n * 2;
        //$("#divFiles p:eq(" + n + ")").remove();
        //$("#divFiles p:eq(" + n + ")").remove();
        $("#pFile" + n).remove();
        $("#pFileInfo" + n).remove();
        fileLength = fileLength - 1;
    }

    function sumbitForm() {
        if (checkForm() == false) {
            return;
        }
        document.getElementById("btnSubmit").style.display = "none";
        document.getElementById("lblSubmit").style.display = "inline"; 
        var infos = document.getElementsByName("filesinfo");
        var fs = document.getElementsByName("files");
        var re = new RegExp(",", "g");
        for (n = 0; n < infos.length; n++) {
            if (fs[n].value != "") {
                if (IsBlank(infos[n].value) == true) {
                    alert("请填写图片说明");
                    infos[n].focus();
                    document.getElementById("btnSubmit").style.display = "inline";
                    document.getElementById("lblSubmit").style.display = "none";
                    return;
                } else {
                    infos[n].value = infos[n].value.replace(re, "，");
                }
            }
        }
        document.getElementById("form1").submit();
    }
</script>