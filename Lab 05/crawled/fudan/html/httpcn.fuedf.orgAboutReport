    <script>
        $(".navm").hover(function () {

            return null;

            $(".navmega").hide();

            $("#" + $(this).attr("id") + "d").show();
    
            if (typeof ($("#" + $(this).attr("id") + "d")) != "undefined" && $("#" + $(this).attr("id") + "d").html() != "undefined" && $("#" + $(this).attr("id") + "d").hasClass("navmega"))
            {
              
                $("#megaoff").show();
            }
        });
        $(".navm").blur(function () {
            $(".navmega").hide();
        });
        $(".navmega").mouseleave(function () {
            $(".navmega").fadeOut(500);;
        });

        $("#megaoff").click(function () {
            $(".navmega").slideUp(1000);;
        });
    </script>
