			function getCityWeather(id,n) {
				if (sina.$('spt_jsonp'+n)) {
					sina.$('dz_box').removeChild(sina.$('spt_jsonp'+n))
				}
				var spt=document.createElement('script');
				spt.id='spt_jsonp'+n;
				sina.$('dz_box').appendChild(spt);
				spt.src='http://php.weather.sina.com.cn/iframe/index/w_cl.php?code=js&cbf=showCityWeather'+n+'&city='+id;
			}

			//删除定制
			function delete_dingzhi(o) {

				for (var i=0; i<citys.length; i++) {
					var c=o.parentNode.getElementsByTagName('h4')[0].getElementsByTagName('a')[0].innerHTML;
					if (citys[i]==c) {
						citys.splice(i,1)
					}
				}
				o.parentNode.innerHTML='<input type="button" class="btn_dz" onclick="show_dingzhi()" value="添加定制" hideFocus="true" />';
				flashData.write('city_dingzhi',citys);
			}


			sina.$('fm_dingzhi').onsubmit=function () {
                            
                                var tt = this.getElementsByTagName('tbody')[0].rows;
				var kk = 0;
				if (tt) {
					for (var i = 1; i < tt.length; i++) {
						if (tt[i].cells[0].firstChild.innerHTML == sina.$('dzCityName').value) {
							kk = 1;
						}
					}
					if (kk == 0) {
						sina.$('dzCityName').value = this.getElementsByTagName('tbody')[0].rows[1].cells[0].firstChild.innerHTML;
					};
				};    
                                
				var value=sina.$('dzCityName').value;
				if (!value || value=='输入国名、地名、拼音、电话区号均可') {
					return false;
				}

				if (citys) {
					for (var i=0; i<citys.length; i++) {
						if (citys[i]==value) {
							alert('您已经定制过'+value+'的天气了! 不用定2个吧 ^ ^');
							sina.$('fm_dingzhi').reset();
							return false;
						}
					}
					if (citys.length>=3) {
						alert('最多只能预订3个城市!');
						return false;
					}
				}
				citys.push(value);
				flashData.write('city_dingzhi',citys);
				load_dingzhi();
				close_dingzhi();
				return false;
			}

			sina.$('dataFrame').onload=function () {
				citys=flashData.read('city_dingzhi')||[];
				if (typeof (citys) == 'string') {
					citys=citys.split(',');
				}
				load_dingzhi();
			}


