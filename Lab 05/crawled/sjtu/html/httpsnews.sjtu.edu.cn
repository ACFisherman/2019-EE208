        				}
        				if (month<10) {
        					month="0"+month;
        				}
        				sDate = year+"-"+month+"-"+sDay;
        			    if (sDate==timeArr[i]){
        			    	$(this).addClass("active");
    						$(this).click(function(event){
    							var sMonth = parseInt(switchTimeArr[1]);
    		            		var sYear = parseInt(switchTimeArr[3]);
    		        			var sDay = $(this).html();
    		        			if(sDay.length == 1){
    		    					sDay = 0 + sDay;
    		    				}
    		        			sMonth = sMonth - 1;
    		        			if (sMonth==0) {
    	        					sMonth = 12;
    	        					sYear = sYear - 1;
    	        				}
    	        				if (sMonth<10) {
    	        					sMonth="0"+sMonth;
    	        				}
    		        			sDate = sYear+"-"+sMonth+"-"+sDay;
    							var a = $("<a href='http://search.sjtu.edu.cn/search-report/lectureSearch?searchStartDate="+sDate+"&searchEndDate="+sDate+"' target='_blank'></a>").get(0);
                                var e = document.createEvent("MouseEvents");
                                e.initEvent("click", true, true );
                                a.dispatchEvent(e);
    							event.stopPropagation();
    						});
        			    }
        			    return true;
        			}
        			
        			if ($(this).hasClass("new")) {
        				month = month + 1;
        				if (month==13) {
        					month = 1;
        					year = year + 1;
        				}
        				if (month<10) {
        					month="0"+month;
        				}
        				sDate = year+"-"+month+"-"+sDay
        			    if (sDate==timeArr[i]){
        			    	$(this).addClass("active");
    						$(this).click(function(event){
    							var sMonth = parseInt(switchTimeArr[1]);
    		            		var sYear = parseInt(switchTimeArr[3]);
    		        			var sDay = $(this).html();
    		        			if(sDay.length == 1){
    		    					sDay = 0 + sDay;
    		    				}
    		        			sMonth = sMonth + 1;
    	        				if (sMonth==13) {
    	        					sMonth = 1;
    	        					sYear = sYear + 1;
    	        				}
    	        				if (sMonth<10) {
    	        					sMonth="0"+sMonth;
    	        				}
    		        			sDate = sYear+"-"+sMonth+"-"+sDay;
    							var a = $("<a href='http://search.sjtu.edu.cn/search-report/lectureSearch?searchStartDate="+sDate+"&searchEndDate="+sDate+"' target='_blank'></a>").get(0);
                                var e = document.createEvent("MouseEvents");
                                e.initEvent("click", true, true );
                                a.dispatchEvent(e);
    							event.stopPropagation();
    						});
        			    }
        				return;
        			}
        			
       				if (month<10) {
       					month="0"+month;
       				}
       				sDate = year+"-"+month+"-"+sDay;
       			    if (sDate==timeArr[i]){
       			    	$(this).addClass("active");
   						$(this).click(function(event){
   							var sMonth = parseInt(switchTimeArr[1]);
		            		var sYear = parseInt(switchTimeArr[3]);
		        			var sDay = $(this).html();
		        			if(sDay.length == 1){
		    					sDay = 0 + sDay;
		    				}
		        			if (sMonth<10){
		        				sMonth="0"+sMonth;
		        			}
		        			sDate = sYear+"-"+sMonth+"-"+sDay;
   							var a = $("<a href='http://search.sjtu.edu.cn/search-report/lectureSearch?searchStartDate="+sDate+"&searchEndDate="+sDate+"' target='_blank'></a>").get(0);
