	function distinctTimeArr(timeArr) {

           var result = new Array();
           for (var i = 0; i < timeArr.length; i++) {
               var item = timeArr[i];
               if (result.indexOf(item) === -1) {
            	   result.push(item);
               }
           }
           return result;

       }
       
       function formatDateTime(Date) {
        var _year = Date.getFullYear();
        var _month = Date.getMonth();
        var _date = Date.getDate();
        _month = _month + 1;
        if(_month < 10){_month = "0" + _month;}
        if(_date<10){_date="0"+_date  }
        return  _year + "-" + _month + "-" + _date;
       }
        
        function parseArr(data){
            var nameArr = [];
            var result = [];
            
            var j;
            for (var i = 0; i < data.length; i++) {
            	var item = data[i];
            	if ((j = nameArr.indexOf(item.name)) > 1) {
            		result[j].value=Number(result[j].value)+Number(item.value);
            	} else {
            		 nameArr.push(item.name);
                     result.push({
                         name:item.name,
                         value:item.value
                     })
            	}
            }
            return result;
        }
        
        function getTimeArr(json,data) {
            var timeArr = new Array();
            for(var i = 0; i < json.length; i++) {
                if(json[i]) {
                    var s = json[i].jzsjRq;
                    //s = new Date(s);
                    //s = formatDateTime(s);
                    var ss = s.split(" ").length > s.split("$nbsp;").length ? s.split(" ") : s.split("$nbsp;");
                    timeArr[i] = ss[0];
                    if(json[i].jzdd.length != 0){
                       if (json[i].jzdd.indexOf("徐汇") != -1) {
                           var XuhuiRow = {
                               name : "徐汇校区",
                               value : 1
                           }
                           data.push(XuhuiRow);
                           var row = {
                               name : json[i].jzdd,
                               value : 1
                           };
                           data.push(row);
                       }
                       if (json[i].jzdd.indexOf("闵行") != -1) {
                           var MinhangRow = {
                               name : "闵行校区",
                               value : 1
                           }
                           data.push(MinhangRow);
                           var row = {
                               name : json[i].jzdd,
                               value : 1
                           };
                           data.push(row);
                       }
                    }
                }
            }
            return timeArr;
        }
        
        function eqDate(timeArr){
        	$(".datetimepicker-days .table-condensed tbody td").addClass("disabled");
