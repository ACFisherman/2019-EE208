                $(".datetimepicker-days .table-condensed .prev").addClass("disabled");    
            }

            if (newYear == sYear) {
            	if (sMonth < newMonth) {
        			$(".datetimepicker-days .table-condensed .prev").addClass("disabled");

        		}
        		if (sMonth > newMonth) {
        			$(".datetimepicker-days .table-condensed .next").addClass("disabled");
        		}
        		if (sMonth == newMonth) {
        			if ($(".datetimepicker-days .table-condensed .next").hasClass("disabled")) {
        				$(".datetimepicker-days .table-condensed .next").removeClass("disabled");
        			}
        			if ($(".datetimepicker-days .table-condensed .prev").hasClass("disabled")) {
        				$(".datetimepicker-days .table-condensed .prev").removeClass("disabled");
        			}
        		}
            }
            if (newYear < sYear) {
                $(".datetimepicker-days .table-condensed .next").addClass("disabled");
            }
        	for(var i=0;i<timeArr.length;i++){
        		$(".datetimepicker-days .table-condensed tbody td").each(function(){
        			var month = sMonth;
        			var year = sYear;
