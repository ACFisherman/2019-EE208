    //弹窗
    function getcardmoyu0928() {
        if (parseInt(is_login) == 0) {
            login();
            return;
        };
        var cardshowid=getNewOldId();
        var item_id=27487;
        var symboln="moyu0928";
        if(cardshowid==1){
            item_id=27487;//laoshou
            symboln="moyu0928old";
        }else{
            item_id=27486;//xinshou
            symboln="moyu0928";
        }
        $.ajax({
            type: 'get',
            url: "/act_ajax/" + symboln + "/sendCardNo",
            dataType: 'json',
            data: {
                'item_id': item_id,
                'gid': 2424,
                'tuid': '',
            },
            success: function (data) {
                if (data.code == 200 || data.code == 400 || data.code == 403 || data.code == 301) {
                    $('#cardnum').html(data.data.kahao);
                } else if (data.code == 402) {
                    //激活但是魔域同一个账号
                    $('#cardnum').html(data.data.kahao);
                } else {
                    $('#cardnum').html("很抱歉" + data.msg);
                }
                $(".dialog-gift").show();
            }
        });
        var attenddo = new Array();
        attenddo = SinaGameInterface.attend('moyu0928', 'ka');
        $("#lotto_times").html(attenddo.data.times);
    }
    function share() {
        if (parseInt(is_login) == 0) {
            login();
            return;
        };
        weibcontent = $("#weibocontent").html();
        $.ajax({
            type: 'POST',
            url: "/act/" + symbol + "/add_times/wb",
            dataType: 'json',
            data: { 'content': weibcontent },
            success: function (data) {
                console.log(data);
                $("#lotto_times").html(data.data.times);
                alert("发布微博成功！");
            }
        });
    }
    $(".btn-require-card").on("click",function(){
        getcardmoyu0928();
    })
    $(".btn-require").on("click",function(){
        getcardold();
    })
    function getcardold() {
        if (parseInt(is_login) == 0) {
            login();
            return;
        };
        $.ajax({
            type: 'get',
            url: "/act_ajax/moyu0928new/sendCardNo",
            dataType: 'json',
            data: {
                'item_id': 27488,
                'gid': 2424,
                'tuid': '',
            },
            success: function (data) {
                if (data.code == 200 || data.code == 400 || data.code == 403 || data.code == 301) {
                    $('#cardnum').html(data.data.kahao);
                } else if (data.code == 402) {
                    //激活但是魔域同一个账号
                    $('#cardnum').html(data.data.kahao);
                } else {
                    $('#cardnum').html("很抱歉" + data.msg);
                }
                $(".dialog-gift").show();
            }
        });
    }

